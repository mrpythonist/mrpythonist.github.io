---
import { siteConfig } from "../config";
const hasSkills = siteConfig.skills && siteConfig.skills.length > 0;
---

{
  hasSkills && (
    <section id="skills" class="p-8 sm:p-12 md:p-16 lg:p-24">
      <div>
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
          <div class="lg:col-span-4">
            <h2 class="text-3xl sm:text-4xl md:text-5xl xl:text-7xl font-bold text-gray-900">
              Skills
            </h2>
            <div
              class="w-[75px] h-[5px] mt-2 rounded-full"
              style={`background-color: ${siteConfig.accentColor}`}
            />
          </div>

          <div class="lg:col-span-8">
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
              {siteConfig.skills.map((skillCategory) => (
                <div class="p-4 sm:p-6 md:p-8 bg-gray-50 rounded-xl sm:rounded-2xl border border-gray-200">
                  <div class="space-y-4">
                    <div>
                      <h3 class="text-xl sm:text-2xl font-bold text-gray-900">
                        {skillCategory.category}
                      </h3>
                    </div>
                    
                    <div class="flex flex-wrap gap-2">
                      {skillCategory.items.map((skill) => (
                        <span
                          class="px-3 py-1.5 bg-gray-900 text-white rounded-lg text-sm font-medium"
                        >
                          {skill}
                        </span>
                      ))}
                    </div>
                  </div>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </section>
  )
}